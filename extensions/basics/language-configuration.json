{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "autoClosingPairs": [
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "(", "close": ")" },
    { "open": "<", "close": ">" }
  ],
  "surroundingPairs": [
    ["'", "'"],
    ["(", ")"],
    ["<", ">"]
  ]
}
