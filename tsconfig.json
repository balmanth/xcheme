{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "newLine": "lf",
    "strict": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "esModuleInterop": false
  },
  "exclude": ["**/tests/**/*", "**/types/**/*"]
}
